{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx.--fix",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "lint:format": "npm run lint && npm run format",
    "build": "tsc -p tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "commit": "cz",
    "start": "node -r dotenv/config ./dist/presentation/server.js dotenv_config_path=.env.production",
    "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register ./src/presentation/server.ts dotenv_config_path=.env.development",
    "prepare": "husky install",
    "test": "mocha --require ts-node/register src/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:PedroHenrique-git/ecommerce-api.git"
  },
  "lint-staged": {
    "*.{css,less,scss,html,json,jsx,tsx,js,ts}": [
      "npm run lint:format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^5.1.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.21.0",
    "graphql": "^16.7.1",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^4.0.3",
    "prisma": "^5.1.1",
    "tscpaths": "^0.0.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@graphql-tools/executor-http": "^1.0.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.6",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "chai": "^4.3.7",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
